@model EmployeeTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>@Html.DisplayFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="RequiredCerts" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="City" />
            <input type="hidden" asp-for="Zip" />
            <input type="hidden" asp-for="State" />
            <input type="hidden" asp-for="Phone" />
            <input type="hidden" asp-for="DateOfBirth" />
            <input type="hidden" asp-for="LicenseNumber" />
            @if (Model.RequiredCerts != null)
            {
                if (Model.RequiredCerts.Contains("1"))
                {
                    <div class="form-group">
                        <h3><strong>Cert 1</strong></h3>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cert1StartDate" class="control-label"></label>
                        <input asp-for="Cert1StartDate" class="form-control" />
                        <span asp-validation-for="Cert1StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cert1EndDate" class="control-label"></label>
                        <input asp-for="Cert1EndDate" class="form-control" />
                        <span asp-validation-for="Cert1EndDate" class="text-danger"></span>
                    </div>
                }

                if (Model.RequiredCerts.Contains("2"))
                {
                    <div class="form-group">
                        <h3><strong>Cert 2</strong></h3>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cert2StartDate" class="control-label"></label>
                        <input asp-for="Cert2StartDate" class="form-control" />
                        <span asp-validation-for="Cert2StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cert2EndDate" class="control-label"></label>
                        <input asp-for="Cert2EndDate" class="form-control" />
                        <span asp-validation-for="Cert2EndDate" class="text-danger"></span>
                    </div>
                }

                if (Model.RequiredCerts.Contains("3"))
                {
                    <div class="form-group">
                        <h3><strong>Cert 3</strong></h3>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cert3StartDate" class="control-label"></label>
                        <input asp-for="Cert3StartDate" class="form-control" />
                        <span asp-validation-for="Cert3StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cert3EndDate" class="control-label"></label>
                        <input asp-for="Cert3EndDate" class="form-control" />
                        <span asp-validation-for="Cert3EndDate" class="text-danger"></span>
                    </div>
                }
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>